<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_login"
    app:startDestination="@id/loginSocialFragment">

    <fragment
        android:id="@+id/loginSocialFragment"
        android:name="com.example.lifemaster.presentation.login.view.LoginSocialFragment"
        android:label="LoginSocialFragment"
        tools:layout="@layout/fragment_login_social">

        <action
            android:id="@+id/action_loginSocialFragment_to_loginEmailFragment"
            app:destination="@id/loginEmailFragment" />

        <action
            android:id="@+id/action_loginSocialFragment_to_signupEmailFragment"
            app:destination="@id/signupEmailFragment" />
    </fragment>

    <fragment
        android:id="@+id/loginEmailFragment"
        android:name="com.example.lifemaster.presentation.login.view.LoginEmailFragment"
        android:label="LoginEmailFragment"
        tools:layout="@layout/fragment_login_email">

        <action
            android:id="@+id/action_loginEmailFragment_to_findPasswordFragment"
            app:destination="@id/findPasswordFragment" />
    </fragment>

    <fragment
        android:id="@+id/signupEmailFragment"
        android:name="com.example.lifemaster.presentation.login.view.SignupEmailFragment"
        android:label="SignupEmailFragment"
        tools:layout="@layout/fragment_signup_email">

        <action
            android:id="@+id/action_signupEmailFragment_to_signupProfileFragment"
            app:destination="@id/signupProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/findPasswordFragment"
        android:name="com.example.lifemaster.presentation.login.view.FindPasswordFragment"
        android:label="비밀번호 찾기"
        tools:layout="@layout/fragment_find_password">

        <action
            android:id="@+id/action_findPasswordFragment_to_resetPasswordFragment"
            app:destination="@id/resetPasswordFragment" />
    </fragment>

    <fragment
        android:id="@+id/resetPasswordFragment"
        android:name="com.example.lifemaster.presentation.login.view.ResetPasswordFragment"
        android:label="비밀번호 재설정"
        tools:layout="@layout/fragment_reset_password" />

    <fragment
        android:id="@+id/signupProfileFragment"
        android:name="com.example.lifemaster.presentation.login.view.SignupProfileFragment"
        android:label="회원가입 프로필 설정"
        tools:layout="@layout/fragment_signup_profile" />

</navigation>
