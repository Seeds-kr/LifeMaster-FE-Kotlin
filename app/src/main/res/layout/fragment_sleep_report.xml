<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F5"
    android:paddingHorizontal="16dp"
    android:paddingVertical="30dp"
    tools:context=".presentation.home.sleep.SleepReportFragment">

    <TextView
        android:id="@+id/tv_sleep_report_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="오늘은\n총 7시간 30분 잤어요"
        android:textColor="#131313"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_sleep_report_today_mood"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="#E0DED8"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sleep_report_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/tv_sleep_report_today_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleep_report_today_mood"
                android:textColor="#BBAB94"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/iv_sleep_report_today_mood_very_bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mood_very_bad" />

            <ImageView
                android:id="@+id/iv_sleep_report_today_mood_bad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_mood_bad" />

            <ImageView
                android:id="@+id/iv_sleep_report_today_mood_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_mood_good" />

            <ImageView
                android:id="@+id/iv_sleep_report_today_mood_very_good"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_mood_very_good" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_sleep_report_graph"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:contentPaddingTop="20dp"
        app:contentPaddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/cv_sleep_report_today_mood"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cv_sleep_report_analysis">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart_sleep_report_graph"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_sleep_report_analysis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toBottomOf="@id/cv_sleep_report_graph"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">
            <TextView
                android:id="@+id/tv_sleep_report_analysis_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleep_report_analysis_title"
                android:textSize="17sp"
                android:textColor="#131313"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_sleep_report_analysis_sleep_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="#EBE6DF"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_sleep_report_analysis_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cv_sleep_report_analysis_sleep_score">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="16dp">
                    <TextView
                        android:id="@+id/tv_sleep_report_analysis_sleep_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sleep_report_analysis_sleep_time_title"
                        android:textSize="13sp"
                        android:textColor="#131313"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tv_sleep_report_analysis_sleep_time_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="450분"
                        android:textColor="#131313"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_sleep_report_analysis_sleep_time_title"
                        app:layout_constraintStart_toStartOf="@id/tv_sleep_report_analysis_sleep_time_title"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        app:contentPaddingLeft="4dp"
                        app:contentPaddingRight="4dp"
                        app:contentPaddingTop="2dp"
                        app:contentPaddingBottom="2dp"
                        app:cardBackgroundColor="#BBAB94"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="6dp"
                        app:layout_constraintStart_toEndOf="@id/tv_sleep_report_analysis_sleep_time_value"
                        app:layout_constraintBottom_toBottomOf="@id/tv_sleep_report_analysis_sleep_time_value">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="48"
                                android:textColor="@color/white"
                                android:textSize="12sp"/>
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@drawable/ic_arrow_up"
                                android:layout_marginStart="2dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_sleep_report_analysis_sleep_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#D8F3EC"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv_sleep_report_analysis_sleep_time"
                app:layout_constraintTop_toTopOf="@id/cv_sleep_report_analysis_sleep_time">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="16dp">
                    <TextView
                        android:id="@+id/tv_sleep_report_analysis_sleep_score_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sleep_report_analysis_sleep_score_title"
                        android:textSize="13sp"
                        android:textColor="#131313"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tv_sleep_report_analysis_sleep_score_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="71점"
                        android:textColor="#131313"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_sleep_report_analysis_sleep_score_title"
                        app:layout_constraintStart_toStartOf="@id/tv_sleep_report_analysis_sleep_score_title"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        app:contentPaddingLeft="4dp"
                        app:contentPaddingRight="4dp"
                        app:contentPaddingTop="2dp"
                        app:contentPaddingBottom="2dp"
                        app:cardBackgroundColor="#7CD7BD"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="6dp"
                        app:layout_constraintStart_toEndOf="@id/tv_sleep_report_analysis_sleep_score_value"
                        app:layout_constraintBottom_toBottomOf="@id/tv_sleep_report_analysis_sleep_score_value">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textColor="@color/white"
                                android:textSize="12sp"/>
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@drawable/ic_arrow_down"
                                android:layout_marginTop="3dp"
                                app:tint="@color/white"
                                android:layout_marginStart="2dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_sleep_report_analysis_alarm_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="#EBE6DF"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cv_sleep_report_analysis_sleep_time"
                app:layout_constraintEnd_toStartOf="@id/cv_sleep_report_analysis_wakeup_delay_time">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="16dp">
                    <TextView
                        android:id="@+id/tv_sleep_report_analysis_alarm_duration_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sleep_report_analysis_alarm_duration_title"
                        android:textSize="13sp"
                        android:textColor="#131313"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tv_sleep_report_analysis_alarm_duration_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:30 ~ 10:47"
                        android:textColor="#131313"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_sleep_report_analysis_alarm_duration_title"
                        app:layout_constraintStart_toStartOf="@id/tv_sleep_report_analysis_alarm_duration_title"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_sleep_report_analysis_wakeup_delay_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#D8F3EC"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/cv_sleep_report_analysis_alarm_duration"
                app:layout_constraintTop_toTopOf="@id/cv_sleep_report_analysis_alarm_duration" >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="16dp">
                    <TextView
                        android:id="@+id/tv_sleep_report_analysis_wakeup_delay_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sleep_report_analysis_wakeup_delay_time_title"
                        android:textSize="13sp"
                        android:textColor="#131313"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <TextView
                        android:id="@+id/tv_sleep_report_analysis_wakeup_delay_time_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17분"
                        android:textColor="#131313"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_sleep_report_analysis_wakeup_delay_time_title"
                        app:layout_constraintStart_toStartOf="@id/tv_sleep_report_analysis_wakeup_delay_time_title"/>
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        app:contentPaddingLeft="4dp"
                        app:contentPaddingRight="4dp"
                        app:contentPaddingTop="2dp"
                        app:contentPaddingBottom="2dp"
                        app:cardBackgroundColor="#7CD7BD"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="6dp"
                        app:layout_constraintStart_toEndOf="@id/tv_sleep_report_analysis_wakeup_delay_time_value"
                        app:layout_constraintBottom_toBottomOf="@id/tv_sleep_report_analysis_wakeup_delay_time_value">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3"
                                android:textColor="@color/white"
                                android:textSize="12sp"/>
                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@drawable/ic_arrow_down"
                                android:layout_marginTop="3dp"
                                app:tint="@color/white"
                                android:layout_marginStart="2dp"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>