<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/ivServiceIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_round_and_gray"
        android:src="@drawable/ic_logo_star"
        android:tint="#333333"
        android:padding="6dp" />

    <TextView
        android:id="@+id/tvServiceName"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_weight="1"
        android:text="수면"
        android:textSize="14sp"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/ivToggle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_toggle_delete"
        android:contentDescription="toggle" />

    <ImageView
        android:id="@+id/ivDragHandle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_toggle_drag"
        android:contentDescription="drag handle" />
</LinearLayout>