<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_sleep_playlist_item_thumbnail"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/iv_sleep_playlist_item_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            tools:src="@drawable/tmp_sleep_playlist_white_noise"
            android:scaleType="centerCrop"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_sleep_playlist_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="꿀잠 자는 백색소음"
        android:textStyle="bold"
        android:textColor="@color/sleep_primary"
        android:textSize="14sp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/cv_sleep_playlist_item_thumbnail"
        app:layout_constraintStart_toEndOf="@id/cv_sleep_playlist_item_thumbnail"/>

    <TextView
        android:id="@+id/tv_sleep_playlist_item_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-light"
        android:textColor="#717171"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_sleep_playlist_item_title"
        app:layout_constraintTop_toBottomOf="@id/tv_sleep_playlist_item_title"
        tools:text="01:46:60" />

    <TextView
        android:id="@+id/tv_sleep_playlist_item_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="포브스 선정 잘 때 틀면 꿀잠 자는 백색소음 Top 100"
        android:textColor="#C5C6C6"
        android:textSize="12sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_sleep_playlist_item_duration"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_sleep_playlist_item_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>






</androidx.constraintlayout.widget.ConstraintLayout>