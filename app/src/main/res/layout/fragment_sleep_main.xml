<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:background="@drawable/bg_sleep"
    tools:context=".presentation.home.sleep.SleepMainFragment">

    <ImageView
        android:id="@+id/iv_sleep_main_star"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_star_logo"
        app:tint="@color/sleep_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="76dp"/>

    <TextView
        android:id="@+id/tv_sleep_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/sleep_main_title"
        android:textColor="#131313"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/iv_sleep_main_star"
        app:layout_constraintTop_toBottomOf="@id/iv_sleep_main_star" />

    <TextView
        android:id="@+id/tv_sleep_main_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="10"
        android:textColor="@color/sleep_primary"
        android:textSize="80sp"
        app:layout_constraintStart_toStartOf="@id/tv_sleep_main_title"
        app:layout_constraintTop_toBottomOf="@id/tv_sleep_main_title" />

    <TextView
        android:id="@+id/tv_sleep_main_hour_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/sleep_main_hour_label"
        android:textColor="@color/sleep_primary"
        android:textSize="40sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_sleep_main_hour"
        app:layout_constraintStart_toEndOf="@id/tv_sleep_main_hour" />

    <TextView
        android:id="@+id/tv_sleep_main_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="20"
        android:textSize="80sp"
        android:textColor="@color/sleep_primary"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_sleep_main_hour_label"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_sleep_main_hour_label"/>

    <TextView
        android:id="@+id/tv_sleep_main_minute_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="@string/sleep_main_minute_label"
        android:textColor="@color/sleep_primary"
        android:textSize="40sp"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_sleep_main_minute"
        app:layout_constraintStart_toEndOf="@id/tv_sleep_main_minute" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_sleep_main_duration"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#E0E0E0"
        app:cardElevation="0dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sleep_main_hour">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-thin"
            android:gravity="center"
            android:letterSpacing="1.2"
            android:text="10:30 ~ 18:00"
            android:textColor="@color/sleep_primary"
            android:textSize="16sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tv_sleep_main_music_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="잠이 솔솔 오는 백색 소음"
        android:textColor="@color/sleep_primary"
        android:layout_marginTop="190dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/cv_sleep_main_duration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_sleep_main_navigate_to_playlist"/>

    <ImageView
        android:id="@+id/iv_sleep_main_navigate_to_playlist"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_show_more"
        android:layout_marginStart="10dp"
        app:tint="@color/sleep_primary"
        app:layout_constraintStart_toEndOf="@id/tv_sleep_main_music_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_sleep_main_music_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_sleep_main_music_title"/>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/progress_sleep_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:progress="40"
        android:layout_marginTop="24dp"
        app:trackCornerRadius="12dp"
        app:indicatorColor="@color/sleep_primary"
        app:trackColor="@color/white"
        app:trackThickness="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sleep_main_music_title" />

    <ImageView
        android:id="@+id/iv_sleep_main_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pause"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress_sleep_main"/>

</androidx.constraintlayout.widget.ConstraintLayout>