<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    android:background="#F0F4F5"
    tools:context=".presentation.home.sleep.SleepPlaylistFragment">

    <ImageView
        android:id="@+id/iv_sleep_playlist_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_star_logo"
        app:tint="@color/sleep_primary"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_sleep_playlist_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sleep_playlist_title"
        android:textColor="#131313"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/iv_sleep_playlist_star"
        app:layout_constraintTop_toTopOf="@id/iv_sleep_playlist_star"
        app:layout_constraintBottom_toBottomOf="@id/iv_sleep_playlist_star"/>
    
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_sleep_playlist_white_noise"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:layout_marginTop="40dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_sleep_playlist_star">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp">
            <TextView
                android:id="@+id/tv_sleep_playlist_white_noise_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleep_playlist_white_noise_title"
                android:textStyle="bold"
                android:textColor="@color/sleep_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_sleep_playlist_white_noise"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginVertical="20dp"
                tools:listitem="@layout/item_sleep_playlist"
                tools:itemCount="2"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_sleep_playlist_white_noise_title"
                app:layout_constraintBottom_toTopOf="@id/tv_sleep_playlist_white_noise_view_more"/>
            <TextView
                android:id="@+id/tv_sleep_playlist_white_noise_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleep_playlist_view_more"
                android:textColor="#717171"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_sleep_playlist_white_noise_view_more"/>
            <ImageView
                android:id="@+id/iv_sleep_playlist_white_noise_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"
                android:layout_marginStart="12dp"
                app:tint="#717171"
                app:layout_constraintBottom_toBottomOf="@id/tv_sleep_playlist_white_noise_view_more"
                app:layout_constraintTop_toTopOf="@id/tv_sleep_playlist_white_noise_view_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_sleep_playlist_white_noise_view_more"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_sleep_playlist_nature_sounds"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_sleep_playlist_white_noise">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp">
            <TextView
                android:id="@+id/tv_sleep_playlist_nature_sounds_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleep_playlist_nature_sounds_title"
                android:textStyle="bold"
                android:textColor="@color/sleep_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_sleep_playlist_nature_sounds"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginVertical="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_sleep_playlist_nature_sounds_title"
                app:layout_constraintBottom_toTopOf="@id/tv_sleep_playlist_nature_sounds_view_more"/>
            <TextView
                android:id="@+id/tv_sleep_playlist_nature_sounds_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleep_playlist_view_more"
                android:textColor="#717171"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_sleep_playlist_nature_sounds_view_more"/>
            <ImageView
                android:id="@+id/iv_sleep_playlist_nature_sounds_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"
                android:layout_marginStart="12dp"
                app:tint="#717171"
                app:layout_constraintBottom_toBottomOf="@id/tv_sleep_playlist_nature_sounds_view_more"
                app:layout_constraintTop_toTopOf="@id/tv_sleep_playlist_nature_sounds_view_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_sleep_playlist_nature_sounds_view_more"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_sleep_playlist_classic"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_sleep_playlist_nature_sounds">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp">
            <TextView
                android:id="@+id/tv_sleep_playlist_classic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleep_playlist_classic_title"
                android:textStyle="bold"
                android:textColor="@color/sleep_primary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_sleep_playlist_classic"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginVertical="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_sleep_playlist_classic_title"
                app:layout_constraintBottom_toTopOf="@id/tv_sleep_playlist_classic_view_more"/>
            <TextView
                android:id="@+id/tv_sleep_playlist_classic_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sleep_playlist_view_more"
                android:textColor="#717171"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_sleep_playlist_classic_view_more"/>
            <ImageView
                android:id="@+id/iv_sleep_playlist_classic_view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down"
                android:layout_marginStart="12dp"
                app:tint="#717171"
                app:layout_constraintBottom_toBottomOf="@id/tv_sleep_playlist_classic_view_more"
                app:layout_constraintTop_toTopOf="@id/tv_sleep_playlist_classic_view_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_sleep_playlist_classic_view_more"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>