<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black"
            android:textSize="32sp"
            tools:text="07:10" />

        <TextView
            android:id="@+id/tv_day_or_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            tools:text="AM"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_alarm_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="미루기 기능에 관한 설명"
            android:textSize="12sp"
            android:textColor="@color/alarm_primary"
            android:layout_marginStart="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_alarm_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        tools:text="알람 이름"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_monday"
            android:text="월"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:textSize="11sp"
            android:gravity="center"
            android:textColor="@drawable/selector_alarm_repeat_day_text"
            android:background="@drawable/selector_alarm_repeat_day_background"/>
        <TextView
            android:id="@+id/tv_tuesday"
            android:text="화"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:textSize="11sp"
            android:gravity="center"
            android:textColor="@drawable/selector_alarm_repeat_day_text"
            android:background="@drawable/selector_alarm_repeat_day_background"/>
        <TextView
            android:id="@+id/tv_wednesday"
            android:text="수"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:textSize="11sp"
            android:gravity="center"
            android:textColor="@drawable/selector_alarm_repeat_day_text"
            android:background="@drawable/selector_alarm_repeat_day_background"/>
        <TextView
            android:id="@+id/tv_thursday"
            android:text="목"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:textSize="11sp"
            android:gravity="center"
            android:textColor="@drawable/selector_alarm_repeat_day_text"
            android:background="@drawable/selector_alarm_repeat_day_background"/>
        <TextView
            android:id="@+id/tv_friday"
            android:text="금"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:textSize="11sp"
            android:gravity="center"
            android:textColor="@drawable/selector_alarm_repeat_day_text"
            android:background="@drawable/selector_alarm_repeat_day_background"/>
        <TextView
            android:id="@+id/tv_saturday"
            android:text="토"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:textSize="11sp"
            android:gravity="center"
            android:textColor="@drawable/selector_alarm_repeat_day_text"
            android:background="@drawable/selector_alarm_repeat_day_background"/>
        <TextView
            android:id="@+id/tv_sunday"
            android:text="일"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="4dp"
            android:textSize="11sp"
            android:gravity="center"
            android:textColor="@drawable/selector_alarm_repeat_day_text"
            android:background="@drawable/selector_alarm_repeat_day_background"/>
    </LinearLayout>

</LinearLayout>